{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3PermissionsForStaticAndUploadBuckets",
      "Effect": "Allow",
      "Action": [
        "s3:CreateBucket",
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "s3:HeadBucket",
        "s3:PutBucketOwnershipControls",
        "s3:PutPublicAccessBlock",
        "s3:PutBucketLifecycleConfiguration",
        "s3:PutBucketVersioning",
        "s3:PutBucketCors",
        "s3:PutBucketPolicy",
        "s3:PutObject",
        "s3:PutObjectAcl",
        "s3:GetObject",
        "s3:DeleteObject",
        "s3:ListBucketMultipartUploads",
        "s3:AbortMultipartUpload",
        "s3:ListMultipartUploadParts",
        "s3:ListBucketVersions"
      ],
      "Resource": [
        "arn:aws:s3:::*",
        "arn:aws:s3:::*/*"
      ]
    },
    {
      "Sid": "CloudFrontManagement",
      "Effect": "Allow",
      "Action": [
        "cloudfront:ListDistributions",
        "cloudfront:GetDistribution",
        "cloudfront:CreateDistribution",
        "cloudfront:ListOriginAccessControls",
        "cloudfront:CreateOriginAccessControl",
        "cloudfront:GetDistributionConfig"
      ],
      "Resource": "*"
    },
    {
      "Sid": "LogsReadAndConsoleVisibility",
      "Effect": "Allow",
      "Action": [
        "logs:DescribeLogGroups",
        "logs:DescribeLogStreams",
        "logs:GetLogEvents",
        "logs:FilterLogEvents",
        "logs:DescribeAccountPolicies",
        "logs:GetDataProtectionPolicy"
      ],
      "Resource": "*"
    },
    {
      "Sid": "RestrictedPassRoleForLambda",
      "Effect": "Allow",
      "Action": [
        "iam:PassRole",
        "iam:GetRole"
      ],
      "Resource": "arn:aws:iam::076181803615:role/chicago-crimes-lambda-execution-role",
      "Condition": {
        "StringLike": {
          "iam:PassedToService": "lambda.amazonaws.com"
        }
      }
    },
    {
      "Sid": "APIGatewayConsoleView",
      "Effect": "Allow",
      "Action": [
        "apigateway:GET"
      ],
      "Resource": "arn:aws:apigateway:*::/restapis"
    }
  ]
}
